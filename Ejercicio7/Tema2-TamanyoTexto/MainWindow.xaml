<Window x:Class="Tema2_TamanyoTexto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema2_TamanyoTexto"
        mc:Ignorable="d"
        Title="Tamanyo Texto Samir Wawa" Height="450" Width="800">
    <Grid>
        <TextBlock x:Name="Texto" HorizontalAlignment="Center" Margin="0,72,0,0" TextWrapping="Wrap" Text="Samir Wawa Asnani" VerticalAlignment="Top" FontSize="15"/>
        <StackPanel>
            <RadioButton  Content="Pequeño" HorizontalAlignment="Left" Margin="170,0,0,0" VerticalAlignment="Center" Checked="RadioButton_Checked" Tag = "36"/>
            <RadioButton Content="Mediano" HorizontalAlignment="Left" Margin="301,0,0,0" VerticalAlignment="Center" Checked="RadioButton_Checked" Tag="48"/>
            <RadioButton Content="Grande" HorizontalAlignment="Left" Margin="496,0,0,0" VerticalAlignment="Center" Checked="RadioButton_Checked" Tag="72"/>
        </StackPanel>
    </Grid>
</Window>
