<Window x:Class="Tema2_FormatoTexto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tema2_FormatoTexto"
        mc:Ignorable="d"
        Title="Formato Texto Samir Wawa" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="114,121,0,0" TextWrapping="Wrap" Text="Texto" VerticalAlignment="Top"/>
        <TextBox x:Name ="Texto" HorizontalAlignment="Left" Margin="114,142,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Height="67"/>
        <CheckBox x:Name="Negrita" Content="Negrita" HorizontalAlignment="Left" Margin="363,142,0,0" VerticalAlignment="Top" Checked="Negrita_Checked"/>
        <CheckBox x:Name="Cursiva" Content="Cursiva" HorizontalAlignment="Left" Margin="463,142,0,0" VerticalAlignment="Top" Checked="Cursiva_Checked"/>
        <StackPanel Margin="526,129,10,248">
            <RadioButton Content="Rojo" Checked="Rojo_Checked"/>
            <RadioButton Content="Azul" Checked="Azul_Checked"/>
            <RadioButton Content="Verde" Checked="Verde_Checked"/>
        </StackPanel>
    </Grid>
</Window>
